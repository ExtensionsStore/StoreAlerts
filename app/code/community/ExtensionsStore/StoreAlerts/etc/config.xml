<?xml version="1.0"?>
<!--
/**
 * 
 * @category    ExtensionsStore
 * @package     ExtensionsStore_StoreAlerts
 * @author      Extensions Store <admin@extensions-store.com>
 */
-->
<config>
    <modules>
        <ExtensionsStore_StoreAlerts>
            <version>0.9.4</version>
        </ExtensionsStore_StoreAlerts>
    </modules>
    <phpunit>
        <suite>
            <modules>
                <ExtensionsStore_StoreAlerts />
            </modules>
        </suite>
    </phpunit>       
	<admin>
	    <routers>
	        <adminhtml>
	            <args>
	                <modules>
	                    <ExtensionsStore_StoreAlerts before="Mage_Adminhtml">ExtensionsStore_StoreAlerts_Adminhtml</ExtensionsStore_StoreAlerts>
	                </modules>
	            </args>
	        </adminhtml>
	    </routers>
	</admin>
    <adminhtml>
        <layout>
            <updates>
                <extensions_store_storealerts>
                    <file>extensions_store/storealerts.xml</file>
                </extensions_store_storealerts>
            </updates>
        </layout>
    </adminhtml>		
    <frontend>
        <routers>
            <storealerts>
                <use>standard</use>
                <args>
                    <module>ExtensionsStore_StoreAlerts</module>
                    <frontName>storealerts</frontName>
                </args>
            </storealerts>
        </routers>   
        <events>
        	<sales_order_place_after>
        		<observers>
        			<storealerts_observer>
                        <type>singleton</type>
                        <class>storealerts/observer</class>
                        <method>newOrderAlert</method>        			
        			</storealerts_observer>
        		</observers>
        	</sales_order_place_after>
        	<controller_action_postdispatch_contacts_index_post>
        		<observers>
        			<storealerts_observer>
                        <type>singleton</type>
                        <class>storealerts/observer</class>
                        <method>contactAlert</method>        			
        			</storealerts_observer>
        		</observers>        	
        	</controller_action_postdispatch_contacts_index_post>
        </events>       
    </frontend>
    <crontab>
        <jobs>
            <storealerts_push_alerts>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>extensions_store_storealerts/cron::pushAlerts</model>
                </run>
            </storealerts_push_alerts>
            <storealerts_check_notifications>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>extensions_store_storealerts/cron::checkNotifications</model>
                </run>
            </storealerts_check_notifications>     
            <storealerts_log_exceptions>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>extensions_store_storealerts/cron::logExceptions</model>
                </run>
            </storealerts_log_exceptions>                        
        </jobs>
    </crontab>    
    <global>
        <blocks>
            <extensions_store_storealerts>
                <class>ExtensionsStore_StoreAlerts_Block</class>
            </extensions_store_storealerts>
            <storealerts>
                <class>ExtensionsStore_StoreAlerts_Block</class>
            </storealerts>
        </blocks> 
        <helpers>
            <extensions_store_storealerts>
                <class>ExtensionsStore_StoreAlerts_Helper</class>
            </extensions_store_storealerts>
            <storealerts>
                <class>ExtensionsStore_StoreAlerts_Helper</class>
            </storealerts>
        </helpers>
        <models>
            <extensions_store_storealerts>
                <class>ExtensionsStore_StoreAlerts_Model</class>
                <resourceModel>extensions_store_storealerts_resource</resourceModel>
            </extensions_store_storealerts>
            <storealerts>
                <class>ExtensionsStore_StoreAlerts_Model</class>
                <resourceModel>extensions_store_storealerts_resource</resourceModel>
            </storealerts>            
            <extensions_store_storealerts_resource>
                <class>ExtensionsStore_StoreAlerts_Model_Resource</class>
                <entities>
                    <device>
                        <table>extensions_store_storealerts_device</table>
                    </device>                    
                    <preference>
                        <table>extensions_store_storealerts_preference</table>
                    </preference>                    
                    <alert>
                        <table>extensions_store_storealerts_alert</table>
                    </alert>                    
                    <exception>
                        <table>extensions_store_storealerts_exception</table>
                    </exception>                    
                </entities>
            </extensions_store_storealerts_resource>		            
        </models>
        <resources>
            <extensions_store_storealerts_setup>
                <setup>
                    <module>ExtensionsStore_StoreAlerts</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </extensions_store_storealerts_setup>
        </resources>   
 		<log>
        	<core>
            	<writer_model>ExtensionsStore_StoreAlerts_Model_Log_Writer_Stream</writer_model>
        	</core>
    	</log>                
    </global> 
    <default>
        <extensions_store_storealerts>
            <configuration>
                <enabled>1</enabled>
                <email_alerts>1</email_alerts>
                <notification_severity>2</notification_severity>
                <mark_notification_read>1</mark_notification_read>
                <log_level>3</log_level>
                <duplicate_log_limit>5</duplicate_log_limit>
                <duplicate_log_length>255</duplicate_log_length>
            </configuration>
        </extensions_store_storealerts>
    </default>
</config>
